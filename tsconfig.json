{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./out/",
    "strict": true,
    "target": "es6"
  },
  "include": [
    "./src/**/*"
  ]
}
